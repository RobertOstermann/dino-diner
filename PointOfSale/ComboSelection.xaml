<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Combo Selection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="140"/>
                <Setter Property="Height" Value="140"/>
            </Style>
        </WrapPanel.Resources>
        <Button>
            <StackPanel>
                <Image Source="Assets/DinoDiner-01.png"/>
                <TextBlock>Brontowurst Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button>
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-02.png"/>
            </Button.Background>
            Dino-Nuggets Combo
        </Button>
        <Button>Prehistoric PB&amp;J Combo</Button>
        <Button>Pterodactyl Wings Combo</Button>
        <Button>
            <DockPanel>
                <Image Source="Assets/DinoDiner-03.png"/>
                <TextBlock DockPanel.Dock="Bottom">
                    Steakosarus Burger Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button>T-Rex King Burger Combo</Button>
        <Button>Veloci-Wrap Combo</Button>
    </WrapPanel>
</Page>
